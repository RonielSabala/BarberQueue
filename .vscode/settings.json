{
  "editor.formatOnSave": true,
  "[php]": { "editor.defaultFormatter": "junstyle.php-cs-fixer" },
  "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" },
  "php-cs-fixer.allowRisky": true,
  "php-cs-fixer.config": "${workspaceFolder}/.php-cs-fixer.php",
  "php-cs-fixer.executablePath": "${workspaceFolder}/vendor/bin/php-cs-fixer",
  "phpNamespaceResolver.autoSort": false,
  "phpNamespaceResolver.sortOnSave": true,
  "phpNamespaceResolver.removeOnSave": true,
  "phpserver.port": 3000,
  "phpserver.relativePath": "src/public",
  "markdown.extension.toc.levels": "2..3",
  "markdown.extension.toc.omittedFromToc": {
    "README.md": ["## Table of Contents"]
  },
  "cSpell.language": "en",
  "cSpell.caseSensitive": true,
  "cSpell.words": ["addoption", "appspecific", "barberqueue", "EXTR"]
}
